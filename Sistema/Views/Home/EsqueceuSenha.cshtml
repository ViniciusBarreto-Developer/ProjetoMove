@model Sistema.Models.EsqueceuSenha

@{
    ViewBag.Title = "EsqueceuSenha";
}

<p class="titulo">Entre com seu e-mail e eviaremos uma solicitação de recuperação! ;)</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form single-col">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-btns">
            @Html.ActionLink("Voltar", "Acesso", "", new { @class = "btn btn-secondary" })
            <input type="submit" value="Continuar" class="btn btn-primary" />
        </div>
    </div>
}