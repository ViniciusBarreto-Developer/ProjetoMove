@model Sistema.Models.VMAdm

@{
    Layout = null;
}


    <div class="modal-dialog modal-bg ">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalhes do produto</h4>
            </div>
            <div class="modal-body">
                <div class="results-grid">
                    @foreach (var item in Model.DenunciasUsuarios)
                    {
                        <div class="card-container">
                            <div class="project-card">
                                <div>
                                    <button class="btn btn-primary MaisDenuncias" data-id="@item.UsuarioDenunciadoId"></button><h3 class="card-title">Denunciante: @item.UsuarioDenunciante.Nome</h3>
                                    <p class="card-text">Motivo: @item.Motivo</p>
                                </div>
                                <h3 class="card-title">Usuário Denunciado</h3>
                                <a href="@Url.Action("MeuPerfil", "Home", new { id = item.UsuarioDenunciadoId })">
                                    <div class="card-img">
                                        <img src="~/Uploads/@item.UsuarioDenunciado.Foto" alt="Foto do Denunciado" />
                                    </div>
                                </a>
                                <div>
                                    <h3 class="card-title">@item.UsuarioDenunciado.Nome</h3>
                                    <p class="card-text">@item.UsuarioDenunciado.Biografia</p>
                                </div>

                                <div class="form-btns">
                                    <a class="btn btn-primary" onclick="window.location.href='@Url.Action("ConcluirDenuncia", "Adm", new { id = item.Id })'">Concluir</a>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>



